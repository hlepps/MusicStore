<Page x:Class="MusicStore.Pages.AccountSettings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MusicStore.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AccountSettings">

    <Grid>
        <Image HorizontalAlignment="Right" Height="128" Margin="0,10,662,0" VerticalAlignment="Top" Width="128" Source="../obrazy/logo.png"/>
        <TextBlock x:Name="UsertypeTextBlock" Foreground="{DynamicResource napisy}" Margin="0,147,662,0" FontSize="13" HorizontalAlignment="Right" VerticalAlignment="Top" Text="Zmień profilowe" Width="128" />

        <ComboBox x:Name="pictureCombo" HorizontalAlignment="Right" Margin="0,164,662,0" VerticalAlignment="Top" Width="128" SelectionChanged="pictureCombo_SelectionChanged"/>

    </Grid>
</Page>
